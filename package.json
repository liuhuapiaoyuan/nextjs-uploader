{
  "name": "nextjs-uploader",
  "version": "1.0.0",
  "description": "NextJS file uploader component",
  "workspaces": [
    "packages/*",
    "app/example"
  ],
  "scripts": {
    "dev": "bun --filter '*' dev",
    "dev:app": "bun  --filter '{@nextjs-uploader/example,@nextjs-uploader/s3}'  dev",
    "release:s3": "bun run --filter '@nextjs-uploader/s3' release ",
    "release:react": "bun run --filter '@nextjs-uploader/react' release "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/josephluck/nextjs-uploader.git"
  },
  "keywords": [
    "nextjs",
    "uploader",
    "file",
    "upload"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "3.3.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0"
  },
  "peerDependencies": {
    "typescript": "^5.6.2"
  }
}